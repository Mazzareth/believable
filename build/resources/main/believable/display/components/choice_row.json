{
  "type": "container",
  "width": "100%",
  "height": 56,
  "padding": 4,
  "clip": true,
  "children": [
    {
      "type": "box",
      "width": "100%",
      "height": "100%",
      "color": "#FF1C2A44",
      "hoverColor": "#FF2B3E62",
      "gradientEnd": "#FF141E30",
      "borderColor": "#33FFFFFF",
      "borderSize": 1
    },
    {
      "type": "container",
      "width": "100%",
      "height": "100%",
      "flexDirection": "row",
      "alignItems": "center",
      "justifyContent": "space-between",
      "padding": 4,
      "children": [
        {
          "type": "container",
          "flexDirection": "column",
          "justifyContent": "center",
          "gap": 2,
          "width": "75%",
          "children": [
            { "type": "text", "text": "$name", "color": "#FFEAD8A6", "scale": 1.1 },
            {
              "type": "text",
              "text": "$description",
              "color": "#FF9FB3C8",
              "wrap": true,
              "maxLines": 2,
              "width": "100%",
              "scale": 0.9
            }
          ]
        },
        {
          "type": "container",
          "width": 60,
          "height": 24,
          "children": [
            {
              "type": "component",
              "src": "action_button",
              "props": { "label": "Select", "event": "$event" }
            }
          ]
        }
      ]
    }
  ]
}