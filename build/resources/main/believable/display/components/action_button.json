{
  "type": "container",
  "width": "100%",
  "height": "100%",
  "onClick": "$event",
  "children": [
    {
      "type": "box",
      "width": "100%",
      "height": "100%",
      "color": "#FF1C2A44",
      "hoverColor": "#FF2B3E62",
      "gradientEnd": "#FF141E30",
      "borderColor": "#FFD4AF37",
      "borderSize": 1
    },
    {
      "type": "container",
      "width": "100%",
      "height": "100%",
      "flexDirection": "row",
      "justifyContent": "center",
      "alignItems": "center",
      "padding": 4,
      "children": [
        {
          "type": "text",
          "text": "$label",
          "translate": true,
          "centered": true,
          "color": "#FFEAD8A6",
          "scale": 1.0
        }
      ]
    }
  ]
}