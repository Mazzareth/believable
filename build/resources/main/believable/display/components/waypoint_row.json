{
  "type": "container",
  "width": "100%",
  "height": 68,
  "padding": 4,
  "clip": true,
  "children": [
    {
      "type": "box",
      "width": "100%",
      "height": "100%",
      "color": "#FF1C2A44",
      "gradientEnd": "#FF141E30",
      "borderColor": "#1FFFFFFF",
      "borderSize": 1
    },
    {
      "type": "container",
      "width": "100%",
      "height": "100%",
      "flexDirection": "column",
      "justifyContent": "space-between",
      "padding": 4,
      "children": [
        {
          "type": "container",
          "width": "100%",
          "height": 30,
          "flexDirection": "row",
          "justifyContent": "space-between",
          "alignItems": "center",
          "children": [
            {
              "type": "container",
              "flexDirection": "column",
              "gap": 2,
              "children": [
                { "type": "text", "text": "$name", "color": "#FFEAD8A6", "scale": 1.1 },
                { "type": "text", "text": "$pos", "color": "#FF9FB3C8", "scale": 0.8 }
              ]
            },
            {
              "type": "container",
              "flexDirection": "row",
              "gap": 4,
              "children": [
                {
                  "type": "container",
                  "width": 40,
                  "height": 18,
                  "children": [
                    { "type": "component", "src": "action_button", "props": { "label": "Vis", "event": "$eventToggle" } }
                  ]
                },
                {
                  "type": "container",
                  "width": 30,
                  "height": 18,
                  "children": [
                    { "type": "component", "src": "action_button", "props": { "label": "Del", "event": "$eventDelete" } }
                  ]
                }
              ]
            }
          ]
        },
        {
          "type": "container",
          "width": "100%",
          "height": 20,
          "children": [
            {
              "type": "input",
              "width": "100%",
              "height": "100%",
              "placeholder": "Rename...",
              "onSubmit": "$eventRename"
            }
          ]
        }
      ]
    }
  ]
}