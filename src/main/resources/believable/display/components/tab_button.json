{
  "type": "container",
  "width": "100%",
  "height": 28,
  "onClick": "$event",
  "children": [
    {
      "type": "box",
      "width": "100%",
      "height": "100%",
      "color": "#00000000",
      "hoverColor": "#1AFFFFFF",
      "visibleWhen": { "key": "selected", "value": "false" }
    },
    {
      "type": "box",
      "width": "100%",
      "height": "100%",
      "color": "#FF2B3E62",
      "gradientEnd": "#FF1C2A44",
      "visibleWhen": { "key": "selected", "value": "true" }
    },
    {
      "type": "box",
      "x": 0,
      "y": 0,
      "width": 3,
      "height": "100%",
      "color": "#FFD4AF37",
      "visibleWhen": { "key": "selected", "value": "true" }
    },
    {
      "type": "container",
      "width": "100%",
      "height": "100%",
      "flexDirection": "row",
      "justifyContent": "center",
      "alignItems": "center",
      "padding": 4,
      "children": [
        {
          "type": "text",
          "text": "$label",
          "translate": true,
          "centered": true,
          "color": "#FFD7E3F4",
          "scale": 1.0
        }
      ]
    }
  ]
}