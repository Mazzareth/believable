{
  "type": "container",
  "width": "100%",
  "height": 52,
  "padding": 2,
  "children": [
    {
      "type": "box",
      "width": "100%",
      "height": "100%",
      "color": "#FF1C2A44",
      "gradientEnd": "#FF141E30",
      "borderColor": "#1FFFFFFF",
      "borderSize": 1
    },
    {
      "type": "container",
      "width": "100%",
      "height": "100%",
      "flexDirection": "row",
      "alignItems": "center",
      "justifyContent": "space-between",
      "padding": 6,
      "children": [
        {
          "type": "container",
          "flexDirection": "column",
          "justifyContent": "center",
          "gap": 2,
          "width": "65%",
          "children": [
            { "type": "text", "text": "$name", "color": "#FFEAD8A6", "scale": 1.1 },
            {
              "type": "text",
              "text": "$description",
              "color": "#FF9FB3C8",
              "wrap": true,
              "maxLines": 2,
              "width": "100%",
              "scale": 0.9
            }
          ]
        },
        {
          "type": "container",
          "flexDirection": "row",
          "gap": 6,
          "alignItems": "center",
          "children": [
            {
              "type": "container",
              "width": 24,
              "height": 24,
              "onClick": "$eventSlot0",
              "children": [
                {
                  "type": "component",
                  "src": "action_button",
                  "props": { "label": "1", "event": "$eventSlot0" }
                }
              ]
            },
            {
              "type": "container",
              "width": 24,
              "height": 24,
              "onClick": "$eventSlot1",
              "children": [
                {
                  "type": "component",
                  "src": "action_button",
                  "props": { "label": "2", "event": "$eventSlot1" }
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}